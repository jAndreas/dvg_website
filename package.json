{
	"name": "dvg-website",
	"version": "0.0.1",
	"description": "Website of project Der Vegane Germane",
	"main": "app.js",
	"scripts": {
		"dev": "webpack --watch --progress --config webpack.dev",
		"prod": "webpack --config webpack.prod"
	},
	"author": "Andreas Goebel",
	"license": "MIT",
	"devDependencies": {},
	"dependencies": {
		"babel-core": "^6.25.0",
		"babel-eslint": "^7.2.3",
		"babel-loader": "^7.1.0",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-regenerator": "^6.24.1",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-polyfill": "^6.23.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-es2017": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"barfoos2.0": "^0.3.0",
		"css-loader": "^0.28.4",
		"eslint": "^4.2.0",
		"eslint-loader": "^1.9.0",
		"file-loader": "^0.11.2",
		"loader-utils": "^1.1.0",
		"raw-loader": "^0.5.1",
		"socket.io": "^2.0.3",
		"hls.js": "^0.7.10",
		"style-loader": "^0.18.2",
		"template-string-loader": "0.0.3",
		"uglify-es": "^3.0.25",
		"uglify-js": "^3.0.25",
		"url-loader": "^0.5.8",
		"webpack": "^3.3.0",
		"webpack-dev-server": "^2.5.1",
		"webpack-sources": "^1.0.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": "eslint:recommended",
		"rules": {
			"indent": [
				"warn",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "warn",
			"no-debugger": "warn",
			"no-unused-vars": "warn"
		},
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"allowImportExportEverywhere": true
		}
	}
}

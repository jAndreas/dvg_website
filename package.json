{
	"name": "dvg-website",
	"version": "0.0.1",
	"description": "Website of project Der Vegane Germane",
	"main": "app.js",
	"scripts": {
		"legacy": "webpack --mode production --progress --config webpack.legacy",
		"dev": "webpack --mode development --watch --progress --config webpack.dev",
		"prod": "webpack --mode production --progress --config webpack.prod"
	},
	"author": "Andreas Goebel",
	"license": "MIT",
	"dependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.2",
		"babel-loader": "^7.1.4",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-regenerator": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-es2017": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"barfoos2.0": "^0.3.0",
		"clipboard": "^2.0.1",
		"css-loader": "^0.28.11",
		"eslint": "^4.19.1",
		"eslint-loader": "^2.0.0",
		"hls.js": "^0.9.0",
		"loader-utils": "^1.1.0",
		"node-sass": "^4.9.0",
		"proxy-polyfill": "^0.3.0",
		"raw-loader": "^0.5.1",
		"sass-loader": "^7.0.2",
		"socket.io": "^2.1.0",
		"style-loader": "^0.21.0",
		"uglify-js": "^3.4.0",
		"url-loader": "^1.0.1",
		"url-search-params": "^0.10.0",
		"webpack": "^4.10.2",
		"webpack-cli": "^3.0.2",
		"webpack-sources": "^1.0.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": "eslint:recommended",
		"rules": {
			"indent": [
				"off",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "warn",
			"no-debugger": "warn",
			"no-unused-vars": "warn"
		},
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"allowImportExportEverywhere": true
		},
		"globals": {
			"ENV_PROD": false
		}
	},
	"devDependencies": {
		"file-loader": "^1.1.11"
	}
}

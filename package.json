{
	"name": "dvg-website",
	"version": "0.0.1",
	"description": "Website of project Der Vegane Germane",
	"main": "app.js",
	"scripts": {
		"legacy": "webpack --progress --config webpack.legacy",
		"dev": "webpack --watch --progress --config webpack.dev",
		"prod": "webpack --progress --config webpack.prod"
	},
	"author": "Andreas Goebel",
	"license": "MIT",
	"dependencies": {
		"babel-core": "^6.26.0",
		"babel-eslint": "^8.0.1",
		"babel-loader": "^7.1.2",
		"babel-plugin-syntax-dynamic-import": "^6.18.0",
		"babel-plugin-transform-class-properties": "^6.24.1",
		"babel-plugin-transform-regenerator": "^6.26.0",
		"babel-plugin-transform-runtime": "^6.23.0",
		"babel-polyfill": "^6.26.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-preset-es2017": "^6.24.1",
		"babel-preset-stage-0": "^6.24.1",
		"barfoos2.0": "^0.3.0",
		"css-loader": "^0.28.7",
		"eslint": "^4.8.0",
		"eslint-loader": "^1.9.0",
		"file-loader": "^1.1.5",
		"hls.js": "^0.8.4",
		"loader-utils": "^1.1.0",
		"node-sass": "^4.5.3",
		"raw-loader": "^0.5.1",
		"sass-loader": "^6.0.6",
		"socket.io": "^2.0.3",
		"style-loader": "^0.19.0",
		"template-string-loader": "0.0.3",
		"uglify-es": "^3.1.3",
		"uglify-js": "^3.1.3",
		"url-loader": "^0.6.2",
		"webpack": "^3.6.0",
		"webpack-dev-server": "^2.9.1",
		"webpack-sources": "^1.0.1"
	},
	"eslintConfig": {
		"parser": "babel-eslint",
		"extends": "eslint:recommended",
		"rules": {
			"indent": [
				"off",
				"tab"
			],
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				"error",
				"always"
			],
			"no-console": "warn",
			"no-debugger": "warn",
			"no-unused-vars": "warn"
		},
		"env": {
			"browser": true,
			"node": true,
			"es6": true
		},
		"parserOptions": {
			"ecmaVersion": 7,
			"sourceType": "module",
			"allowImportExportEverywhere": true
		}
	},
	"devDependencies": {
		"uglifyjs-webpack-plugin": "^1.0.0-beta.3"
	}
}
